{
  "setupTasks": [
    {
      "name": "Install Poetry",
      "command": "curl -sSL https://install.python-poetry.org | python3 -"
    },
    {
      "name": "Install (Agent)",
      "command": "cd agent && poetry install"
    },
    {
      "name": "Install (UI)",
      "command": "cd ui && pnpm install"
    }
  ],
  "tasks": {
    "serve-agent": {
      "name": "Serve Agent",
      "command": "cd agent && poetry run demo",
      "runAtStart": true,
      "restartOn": {
        "files": ["agent/.env"]
      }
    },
    "serve-ui": {
      "name": "Serve UI",
      "command": "cd ui && pnpm run dev",
      "runAtStart": true,
      "restartOn": {
        "files": ["ui/.env"]
      },
      "preview": {
        "port": 3000
      }
    }
  }
}
