{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "extends": [
    "config:recommended"
  ],
  "poetry": {
    "enabled": true
  },
  "pep621": {
    "enabled": false
  },
  "npm": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "[All] Ignore all NPM packages initially",
      "enabled": false,
      "matchPaths": ["**/*"],
      "matchPackageNames": [
        "*"
      ],
      "labels": ["dependencies"]
    },
    {
      "description": "Enable Renovate for CopilotKit packages only",
      "enabled": true,
      "matchPaths": [
        "ai-researcher/ui/**",
        "starter/ui/**",
        "coagents-qa/ui/**",
        "coagents-shared-state/ui/**",
        "coagents-streaming/ui/**"
      ],
      "matchPackageNames": [
        "/^@copilotkit/",
        "/^copilotkit/"
      ],
      "labels": ["copilotkit"],
      "groupName": "AI Researcher CopilotKit dependencies"
    }
  ]
}